{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2024",
    "outDir": "out",
    "types": ["mocha"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "src/mocha-tests/files",
    "out/mocha-tests/files",
    "jest.config.ts",
    "src/jest-tests"
  ],
  "linterOptions": {
    "exclude": ["src/test/files/js/**"]
  }
}
